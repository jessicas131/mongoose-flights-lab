<section id="show-page">
  <div>Airline: </div>
  <div><%= flight.airline %></div>
  <div>Airport: </div>
  <div><%= flight.airport %></div>
  <div>Flight Number: </div>
  <div><%= flight.flightNo %></div>
  <div>Departs: </div>
  <div><%= flight.departs %></div>
  
</section>
<a href="/flights/<%=flight._id%>/tickets/new">Tickets</a>
<% if (ticket.length) { %>
  <table>
      <thead>
          <tr>
              <th>Seat Number</th>
              <th>Price</th>
          </tr>
      </thead>
      <tbody>
          <% ticket.forEach(function(t) { %>
          <tr>
              <td><%= t.seat %></td>
              <td>$<%= t.price %></td>
          </tr>
          <% }); %>
      </tbody>
  </table>
  <% } else { %>
  <h5>No Tickets Yet</h5>
  <% } %>

<br/>
<% if (flight.destinations.length) { %>
    <table>
      <thead>
        <tr>
          <th>Airport</th>
          <th>Arrival</th>
        
        </tr>
      </thead>
      <tbody>
        <% flight.destinations.forEach(function(d) { %>
          <tr>
            <td><%= d.createdAt.toLocaleDateString() %></td>
            <td><%= d.airport %></td>
            <td><%= d.arrival %></td>
            <td>
              <form method="POST" action="/destinations/<%=d._id%>/<%=flight._id%>?_method=DELETE" class="delete-form">
                <button type ="submit">X</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Destinations Yet</h5>
  <% } %>


  <br><br>
  <h2>Destinations</h2>
 <form id="add-destination-form" method="POST"
   action="/destinations/flights/<%= flight._id %>">
   <label>Arrival:</label>
   <input type="datetime-local" name="arrival">
   <label>:</label>
   <select name="airport">
     <option value="ATL">ATL</option>
     <option value="DFW">DFW</option>
     <option value="DEN">DEN</option>
     <option value="LAX">LAX</option>
     <option value="SAN">SAN</option>
   </select>
   <input type="submit" value="Add Destination">
 </form>

